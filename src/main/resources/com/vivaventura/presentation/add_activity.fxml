<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vivaventura.presentation.AddActivityController">

    <!-- Add Activity Form Fields -->
    <TextField fx:id="nameField" layoutX="14.0" layoutY="89.0" prefHeight="26.0" prefWidth="138.0" promptText="Enter Activity Name" />
    <!-- Add other fields as needed -->

    <Button layoutX="14.0" layoutY="200.0" onMouseClicked="#addActivity" text="Create Activity" />
    <Button layoutX="14.0" layoutY="360.0" onAction="#switchToCreateItinerary" text="Back" />
   <Button layoutX="15.0" layoutY="237.0" onMouseClicked="#deleteActivity" text="Delete Activity" />
   <TextField fx:id="dateField" layoutX="14.0" layoutY="127.0" prefHeight="26.0" prefWidth="138.0" promptText="Enter Date" />
   <TextField fx:id="timeField" layoutX="14.0" layoutY="164.0" prefHeight="26.0" prefWidth="138.0" promptText="Enter Time" />
   <Text layoutX="238.0" layoutY="44.0" strokeType="OUTSIDE" strokeWidth="0.0" text="ACTIVITY PAGE">
      <font>
         <Font size="18.0" />
      </font>
   </Text>
   <TableView fx:id="listOfActivities" layoutX="280.0" layoutY="90.0" prefHeight="200.0" prefWidth="276.0">
     <columns>
       <TableColumn fx:id="name" prefWidth="90.0" text="activity" />
       <TableColumn fx:id="date" prefWidth="92.0" text="date" />
         <TableColumn fx:id="time" prefWidth="93.0" text="time" />
     </columns>
   </TableView>

</AnchorPane>
